<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zerock.api01.todo.mapper.TodoMapper">

    <sql id="search">

        <where>
        <if test="keyword != null and condition != null">
            <foreach collection="condition" item="item" index="index" open="(" close=")" separator="or">

                <if test="item == 'title'">
                    title like concat('%', #{keyword}, '%')
                </if>

                <if test="item == 'writer'">
                    writer like concat('%', #{keyword}, '%')
                </if>

            </foreach>
        </if>
        </where>

    </sql>


    <select id="getTodo" resultType="org.zerock.api01.todo.dto.TodoDTO">
        select tno, title, writer from tbl_todo where tno=#{id}
    </select>

    <delete id="deleteTodo">
        delete from tbl_todo where tno=#{id}
    </delete>

    <select id="getList" resultType="org.zerock.api01.todo.dto.TodoDTO">
        select *
        from
            tbl_todo

        <include refid="search"></include>

        order by tno desc
        limit #{skip}, #{size}

    </select>

    <select id="getCount" resultType="int">
        select count(*)
        from
            tbl_todo

        <include refid="search"></include>

    </select>

