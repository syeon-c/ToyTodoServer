<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zerock.api01.todo.mapper.FileMapper">

    <insert id="addFiles">
        <selectKey resultType="Long" keyProperty="tno" order="BEFORE">
            select MAX(tno) from tbl_todo
        </selectKey>

        insert into
            tbl_files (
                fname,
                tno
            )
            values (
                #{fname},
                #{tno}
            )

    </insert>
</mapper>